	journal = {Molecular Biology and Evolution},
	author = {Hudjashov, Georgi and Karafet, Tatiana M. and Lawson, Daniel J. and Downey, Sean and Savina, Olga and Sudoyo, Herawati and Lansing, J. Stephen and Hammer, Michael F. and Cox, Murray P.},
